<!doctype html>
<html>
<head>
	<title>User Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="/stylesheets/style.css"> <!-- load bootstrap css -->
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>

<div class="container">

<div class="col-sm-3 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Login</h1>

	<!-- LOGIN FORM -->
	
	<form action="/validate" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email" required="true">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password" required="true">
		</div>

		<button type="submit" class="btn btn-warning btn-sm">Login</button>
	</form>
	

	<hr>

	<p>Need an account? <a href="/signup">Signup</a></p>
	

	<img src="/images/collage.png">

</div>

</div>
</body>
</html>